<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="6dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/fore_item_week_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_body"
        tools:text="周五" />

    <TextView
        android:id="@+id/fore_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/fore_item_week_tv"
        android:layout_alignBottom="@id/fore_item_week_tv"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_caption_small"
        tools:text="08.07" />

    <ImageView
        android:tint="@color/colorPrimary"
        android:id="@+id/fore_item_icon_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/fore_item_date_tv"
        android:contentDescription="@string/content_description_default"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fore_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/fore_item_icon_iv"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/text_size_body"
        tools:text="多云转晴" />

    <TextView
        android:id="@+id/fore_item_maxtemp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/separator_text_view"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/text_size_body"
        tools:ignore="RelativeOverlap"
        tools:text="19°" />

    <TextView
        android:id="@+id/separator_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fore_item_mintemp_tv"
        android:gravity="center"
        android:text="@string/separator"
        android:textSize="@dimen/text_size_body" />

    <TextView
        android:id="@+id/fore_item_mintemp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lines="1"
        android:textSize="@dimen/text_size_body"
        tools:text="13°" />


</RelativeLayout>