<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/set_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:text="每"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/set_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="numberDecimal"
            app:layout_constraintBaseline_toBaselineOf="@+id/set_1_tv"
            app:layout_constraintStart_toEndOf="@+id/set_1_tv" />

        <TextView
            android:id="@+id/set_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时更新一次数据"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/set_1_tv"
            app:layout_constraintStart_toEndOf="@+id/set_et" />

        <Button
            android:id="@+id/set_confirm_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="确认修改"
            app:layout_constraintStart_toStartOf="@+id/set_1_tv"
            app:layout_constraintTop_toBottomOf="@+id/set_1_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>